{
    "name": "projek-xyz/ci-installer",
    "description": "Composer installers for Projek.xyz CI3 Starter Kit",
    "homepage": "http://www.projek.xyz/ci-installer",
    "type": "composer-installer",
    "license": "MIT",
    "keywords": [
        "composer", "installer", "codeigniter", "projek-xyz-ci",
        "projek-ci-module", "module", "HMVC", "core", "library"
    ],
    "authors": [
        {
            "name": "Jonathon Hill",
            "email": "jhill9693@gmail.com",
            "role": "Developer"
        },
        {
            "name": "Fery Wardiyanto",
            "email": "feryardiyanto@gmail.com",
			"role": "Maintainer"
        }
    ],
    "support": {
        "issues": "https://github.com/projek-xyz/ci-installer/issues",
        "source": "https://github.com/projek-xyz/ci-installer"
    },
    "autoload": {
        "psr-4": {
            "Projek\\CI\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Projek\\CI\\Tests\\": "tests/"
        }
    },
    "extra": {
        "class": "Projek\\CI\\ComposerInstaller"
    },
    "require-dev": {
        "codeigniter/framework": "^3.0",
        "phpunit/phpunit": "~4.0"
    },
    "config": {
        "optimize-autoloader": true,
        "preferred-install": "dist",
        "sort-packages": true
    },
    "minimum-stability": "dev",
    "prefer-stable": true,
    "require": {
        "composer/installers": "^1.9"
    }
}
